<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingAct">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/splash_bg"
        android:scaleType="fitXY"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/topBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/common_color"
                />
            <ImageView
                android:id="@+id/backIc"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/topBg"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back_icon"
                android:scaleType="fitCenter"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintVertical_bias="0.15"
                />
            <ImageView
                android:id="@+id/splashIcon"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                app:layout_constraintStart_toStartOf="@id/topBg"
                app:layout_constraintEnd_toEndOf="@id/topBg"
                app:layout_constraintTop_toBottomOf="@id/backIc"
                app:layout_constraintBottom_toBottomOf="@id/topBg"
                android:src="@drawable/bmi_logo"
                app:layout_constraintVertical_bias="0"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to BMI"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/topBg"
                app:layout_constraintEnd_toEndOf="@id/topBg"
                app:layout_constraintBottom_toBottomOf="@id/splashIcon"
                app:layout_constraintTop_toBottomOf="@id/splashIcon"
                app:layout_constraintVertical_bias="0.0"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBg"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/admin_panel_settings_ic"
                        app:tint="@color/common_color" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/settings"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/cardview_dark_background"
                         />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"

                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                         />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/notification_ic"
                        app:tint="@color/common_color" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/notifications"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/cardview_dark_background"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:text="0"
                        android:background="@color/common_color"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/rating_ic"
                        app:tint="@color/common_color" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/our_ratting"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/cardview_dark_background"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:text="5"
                        android:background="@color/common_color"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/privacy_ic"
                        app:tint="@color/common_color" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/privacy_policy"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/cardview_dark_background"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:text="0"

                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/more_apps"
                        app:tint="@color/common_color" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/more_apps"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_18ssp"
                        android:textColor="@color/cardview_dark_background"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:text="5"
                        android:background="@color/common_color"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        />



                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>